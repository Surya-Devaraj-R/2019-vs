@model WebApplication1.Models.UserInsert
@{
    ViewBag.Title = "Student Registration";
}

<link href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet" />

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow">
                <div class="card-header bg-primary text-white text-center">
                    <h2>Student Registration</h2>
                </div>
                <div class="card-body">
                    @using (Html.BeginForm("Insert_Click", "Db", FormMethod.Post, new { enctype = "multipart/form-data" }))
                    {
                        <div class="form-group">
                            <label>Name</label>
                            @Html.TextBoxFor(m => m.Sname, new { @class = "form-control", placeholder = "Enter your name" })
                            @Html.ValidationMessageFor(m => m.Sname, "", new { @class = "text-danger" })
                        </div>
                        <div class="form-group">
                            <label>Age</label>
                            @Html.TextBoxFor(m => m.Sage, new { @class = "form-control", placeholder = "Enter your age", type = "number", min = "18", max = "60" })
                            @Html.ValidationMessageFor(m => m.Sage, "", new { @class = "text-danger" })
                        </div>
                        <div class="form-group">
                            <label>Photo</label>
                            <input type="file" name="file" class="form-control-file" />
                            @Html.ValidationMessageFor(m => m.Sphoto, "", new { @class = "text-danger" })
                        </div>
                        <div class="form-group">
                            <label>State</label>
                            @Html.DropDownList("sId", (SelectList)ViewBag.SelStates, "-- Select State --", new { @class = "form-control", @id = "state-ddl" })
                        </div>
                        <div class="form-group">
                            <label>District</label>
                            <select id="district-ddl" class="form-control" name="DistrictId">
                                <option>Select District</option>
                            </select>
                        </div>
                        <div class="form-group text-center">
                            <input type="submit" value="Register" class="btn btn-success btn-block" />
                        </div>
                        <div class="form-group text-center">
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                            @Html.DisplayFor(m => m.msg)
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>
<script>
    $('#district-ddl').append('<option>Select District</option>');
    $('#state-ddl').change(function () {
        var stateId = $(this).val();
        $.ajax({
            url: '@Url.Action("GetDistrict", "Db")',
            data: { stateId: stateId },
            success: function (data) {
                $('#district-ddl').empty();
                $('#district-ddl').append('<option>Select District</option>');
                $.each(data, function (index, item) {
                    $('#district-ddl').append('<option value="' + item.Value + '">' + item.Text + '</option>');
                });
            }
        });
    });
</script>
